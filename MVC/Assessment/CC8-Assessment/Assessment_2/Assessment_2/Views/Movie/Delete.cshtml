@model Assessment_2.Models.Movie

@{
    ViewBag.Title = "Delete Movie";
}

<h2>Delete Movie</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.movie_name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Director</dt>
        <dd>@Model.director_name</dd>

        <dt>Date of Release</dt>
        <dd>@Model.dateof_Release.ToShortDateString()</dd>
    </dl>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Movies", new { id = Model.mid }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("Cancel", "Index")
}
